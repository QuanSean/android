<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:paddingBottom="30dp"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleItemProject"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:background="#1d4a77"
        android:textColor="#fff"
        android:textSize="24dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionItemProject"
        android:paddingLeft="15dp"
        android:textSize="18dp"
        android:textColor="#000"

        android:layout_below="@+id/titleItemProject"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deadlineItemProject"
        android:paddingLeft="15dp"

        android:textSize="15dp"
        android:textColor="#000"
        android:layout_below="@+id/descriptionItemProject"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personName"
        android:paddingLeft="15dp"
        android:textSize="15dp"

        android:textColor="#000"
        android:layout_below="@+id/deadlineItemProject"

        />
