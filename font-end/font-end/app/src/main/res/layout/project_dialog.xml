<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/back"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#cf3542"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingTop="30dp"
     >
        <Button
            android:id="@+id/btnShowProject"
            android:width="25dp"
            android:height="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="@drawable/ic_info_while"
            android:textColor="@color/colorAccent"
            />


        <Button
            android:id="@+id/btnUpdateStatusDone"
            android:width="25dp"
            android:height="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/ic_done_while"
            android:textColor="@color/colorAccent"
            />
        <Button
            android:id="@+id/btnAddPartner"
            android:width="25dp"
            android:height="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/ic_person_add"
            android:textColor="@color/colorAccent"
            />





